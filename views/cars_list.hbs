<section class="panel panel-default">
    <div class="panel-heading">
        <h4 class="text-center">List of Cars</h4>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center">Id</th>
                    <th class="text-center">Driver name</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each cars}}
                <tr>
                    <td class="text-center">{{_id}}</td>
                    <td class="text-center">{{driver_name}}</td>
                    <td class="text-center">{{status}}</td>
                    <td class="text-center">
                        <a class="btn btn-info" href="/cars/edit/{{_id}}">
                            <span class="glyphicon-edit"></span>
                        </a>
                        <form action="/cars/{{_id}}" method="POST">
                            <input type="hidden" value="DELETE" name="_method">
                            <button class="btn btn-danger" type="submit">
                                <span class="glyphicon-trash"></span>
                            </button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>